@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Official languages of countries";
}
@model List<aspTest.Models.CountriesModelBase>

<div class="table-responsive">
    <table class="table table-hover">
        <thead style="font-weight:bold;">
            <tr>
                <td>Continent</td>
                <td>Country</td>
                <td>Language</td>
                <td>Population</td>
                <td>Official Language Use %</td>
                <td>Official Language Population Use</td>
                <td>&nbsp;</td>
            </tr>
        </thead>
        <tbody>       
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Continent</td>
                    <td>@item.Country</td>
                    <td>@item.Language</td>
                    <td>@item.Population</td>
                    <td>@item.Official_Language_Use_Percent</td>
                    <td>@item.Official_Language_Population_Use_People</td>
                    <td>@Html.ActionLink("Details", "country", "Home", new { id = @item.Code.ToString() }, null) </td>
                </tr>
            }
        </tbody>
    </table>
    </div>

